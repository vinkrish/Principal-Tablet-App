<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/breadcrum"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/dark_black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/heading_selector"
            android:contentDescription="@string/cc"
            android:onClick="toDashbord"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/dashboard" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#666363" />

        <Button
            android:id="@+id/seButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/heading_selector"
            android:onClick="se"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/se"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/seClass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_selector_blue"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </LinearLayout>

    <View
        android:id="@+id/dividerup"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/breadcrum"
        android:background="#333333" />

    <TextView
        android:id="@+id/classtext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/dividerup"
        android:background="@color/layoutbelowBC"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/light_black"
        android:textSize="21sp" />

    <View
        android:id="@+id/viewbelowbc"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/classtext"
        android:background="@color/border" />

    <TextView
        android:id="@+id/sectext"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/viewbelowbc"
        android:background="@color/layoutbelowBC"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/sections"
        android:textColor="@color/light_black"
        android:textSize="18sp" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sectext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:horizontalSpacing="20dp"
        android:numColumns="4"
        android:verticalSpacing="30dp"></GridView>

    <LinearLayout
        android:id="@+id/comp_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/gridView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:text="@string/select_classes"
            android:textSize="18sp" />

        <Button
            android:id="@+id/go"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:background="@drawable/button_selector_blue"
            android:gravity="center"
            android:text="@string/go"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/reeturn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:background="@drawable/button_selector_blue"
            android:gravity="center"
            android:text="@string/reeturn"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/comp_layout"
        android:background="@color/divider" />

    <FrameLayout
        android:id="@+id/fl_comp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:background="@color/layoutbelowBC"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="@string/exam"
                android:textColor="@color/light_black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/comp1sec1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="0.4"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/comp1sec2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="0.4"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_comp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:background="@color/layoutbelowBC"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="@string/exam"
                android:textColor="@color/light_black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/comp2sec1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="0.4"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/comp2sec2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="0.4"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/comp2sec3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="0.4"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fl_comp1"
        android:background="@color/divider" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom"></ListView>

</RelativeLayout><!-- From: file:/Users/vinkrish/StudioProjects/Principal-Tablet-App/app/src/main/res/layout/comp_se_exam.xml -->