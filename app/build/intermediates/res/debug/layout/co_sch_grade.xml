<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
    
    <LinearLayout
        android:id="@+id/breadcrum"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_black"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/heading_selector"
            android:contentDescription="@string/cc"
            android:onClick="toDashbord"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/dashboard" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#666363" />

        <Button
            android:id="@+id/seButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/heading_selector"
            android:onClick="se"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/se"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#666363" />

        <Button
            android:id="@+id/seClass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/heading_selector"
            android:onClick="seClass"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#666363" />

        <Button
            android:id="@+id/seSec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/heading_selector"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#666363" />
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <TextView
        android:id="@+id/topic_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/layoutbelowBC"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/dark_black" />
    
    <TextView
        android:id="@+id/aspect_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layoutbelowBC"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/dark_black" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/layoutbelowBC"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="@string/idxcolumn"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="@string/studentname"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="@string/remark"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#333333" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="@string/grade"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>  

</LinearLayout>
