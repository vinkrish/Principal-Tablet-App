<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/breadcrum"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_black"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/heading_selector"
            android:contentDescription="@string/cc"
            android:onClick="toDashbord"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/dashboard" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dash_seperator" />

        <Button
            android:id="@+id/seButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/heading_selector"
            android:onClick="se"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/se"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dash_seperator" />

        <Button
            android:id="@+id/seClass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/heading_selector"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dash_seperator" />

        <Button
            android:id="@+id/seSec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/heading_selector"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dash_seperator" />

        <Button
            android:id="@+id/exam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/heading_selector"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            android:gravity="center"
            style="@style/spinner_style" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            android:gravity="center"
            style="@style/spinner_style" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/border" />

        <TextView
            android:id="@+id/leftId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@drawable/rep_prev_next_selector"
            android:gravity="center"
            android:text="@string/prev"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/rightId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@drawable/rep_prev_next_selector"
            android:gravity="center"
            android:text="@string/next"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

</LinearLayout><!-- From: file:/Users/Vidhya/Desktop/AndroidStudioProjects/Principal/app/src/main/res/layout/report_gen.xml -->