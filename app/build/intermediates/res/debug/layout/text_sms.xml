<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/breadcrum"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/heading_selector"
            android:contentDescription="@string/cc"
            android:onClick="toDashbord"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/dashboard" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#666363" />

        <Button
            android:id="@+id/voiceSms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_selector_blue"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/sms"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/dividerup"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/textSms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/enter_msg"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:text="@string/send_sms"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/allStudents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/all_students"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/all_male_students"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/all_male_students"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/all_female_students"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/all_female_students"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/allTeachers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/all_teachers"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/all_male_teachers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/all_male_teachers"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/all_female_teachers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/all_female_teachers"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/classTeachers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/all_class_teachers"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/clas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/clas"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/section"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/stud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/student"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/prev"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_activated_light_teal"
                        android:text="@string/prev_mes"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:background="@drawable/heading_selector"
                        android:enabled="false"
                        android:text="@string/submit"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </ScrollView>

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/studentTeacherFrame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/stud_teacher_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="70dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/selectionFrame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/classSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="70dp"
                        android:gravity="center"
                        android:hint="@string/sel_clas"
                        android:inputType="textMultiLine" />

                    <EditText
                        android:id="@+id/secSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:hint="@string/sel_sec" />

                    <EditText
                        android:id="@+id/studSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:hint="@string/sel_stud" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/vinkrish/StudioProjects/Principal-Tablet-App/app/src/main/res/layout/text_sms.xml -->