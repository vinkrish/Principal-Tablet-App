<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/attendance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/heading_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="toDashbord"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/attendance"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/selected_sub_heading"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/border" />

        <TextView
            android:id="@+id/sliptests"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/heading_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="toStDashbord"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/sliptest"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/selected_sub_heading"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_selector_blue"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/streport"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/border" />
    </LinearLayout>

    <View
        android:id="@+id/dividerup"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linearLayout"
        android:background="#333333" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/dividerup"
        android:layout_margin="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/datePicker1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/hw_border"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:id="@+id/datetxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginStart="-20dp"
                android:background="@drawable/downarrow"
                android:contentDescription="@string/cc" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/datePicker2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/hw_border"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:id="@+id/datetxt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginStart="-20dp"
                android:background="@drawable/downarrow"
                android:contentDescription="@string/cc" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/classPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/hw_border"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:id="@+id/clastxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:text="@string/clas"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginStart="-20dp"
                android:background="@drawable/downarrow"
                android:contentDescription="@string/cc" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sectionPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/hw_border"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:id="@+id/sectxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:text="@string/section"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginStart="-20dp"
                android:background="@drawable/downarrow"
                android:contentDescription="@string/cc" />
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/evaluationType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout5"
        android:layout_marginBottom="10dp"
        android:checkedButton="@+id/creation"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/creation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="@string/creation"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioButton
            android:id="@+id/submission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submission"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RadioGroup>

    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/evaluationType"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/lisview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/top"
        android:background="@color/layoutbelowBC"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/clas"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/subject"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/csDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="@string/date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.55"
            android:paddingEnd="0dp"
            android:paddingStart="15dp"
            android:text="@string/portions"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.4"
            android:text="@string/average"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_black"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lisview"
        android:background="@color/divider" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom" />

</RelativeLayout><!-- From: file:/Users/vinkrish/StudioProjects/Principal-Tablet-App/app/src/main/res/layout/st_report.xml -->