<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/attendance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_selector_blue"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/attendance"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/border" />

        <TextView
            android:id="@+id/sliptests"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/heading_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="toStDashbord"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/sliptest"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/selected_sub_heading"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/border" />
    </LinearLayout>

    <View
        android:id="@+id/dividerup"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linearLayout"
        android:background="#333333" />

    <TextView
        android:id="@+id/attendOverview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dividerup"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/layoutbelowBC"
        android:gravity="start|center_vertical"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:text="@string/attendoverview"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        android:id="@+id/overviewMargin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/attendOverview"
        android:background="@color/border" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_below="@id/overviewMargin"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:numColumns="2" />

    <View
        android:id="@+id/dividerOverview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/gridView"
        android:layout_marginTop="10dp"
        android:background="@color/border" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerOverview"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@color/layoutbelowBC"
            android:gravity="start|center_vertical"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:text="@string/att_per"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/border" />

        <TextView
            android:id="@+id/longAbsentees"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@color/layoutbelowBC"
            android:gravity="start|center_vertical"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:text="@string/loa"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/viewMargin4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linearLayout4"
        android:background="@color/border" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/viewMargin4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/layoutbelowBC"
                android:gravity="center"
                android:text="@string/clas"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:background="@color/layoutbelowBC"
                android:gravity="start|center_vertical"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:text="@string/percentage"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@color/layoutbelowBC"
                android:gravity="center"
                android:text="@string/clas"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/layoutbelowBC"
                android:gravity="start|center_vertical"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:text="@string/studentname"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/viewMargin5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linearLayout5"
        android:background="@color/border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewMargin5"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/list1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingBottom="1dp"
            android:paddingEnd="0dp"
            android:paddingStart="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="0dp"/>

        <ListView
            android:id="@+id/list2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingStart="0dp"
            android:paddingLeft="1dp"
            android:paddingRight="0dp"/>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/vinkrish/StudioProjects/Principal-Tablet-App/app/src/main/res/layout/dashbord.xml -->